html
  head
    title=title
    link(rel='stylesheet', href='/public/app.css', type='text/css')
    script(src='https://cdn.plot.ly/plotly-latest.min.js')
    script(src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.42.2/mapbox-gl.js')
    link(href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.42.2/mapbox-gl.css', rel='stylesheet')
    script(src='https://code.jquery.com/jquery-3.1.1.slim.min.js')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css', rel='stylesheet')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js')
    script(src='/public/javascripts/app.js')

  body
    div.container
      div.jumbotron
        h1=state
        button(type='button' id="request_data" class='btn btn-primary m-1 btn-sm disabled' onclick='getJson()') Get Json File
        button(id='show_graph' type='button' class='btn btn-primary disabled m-1 btn-sm' onclick='drawGraph()') Draw Graph
        button(type='button' id="request_geo_json" class='btn btn-primary m-1 btn-sm disabled' onclick='getGeoJson()') Get Geo Json File
        button(type='button' id="draw_on_map" class='btn btn-primary disabled m-1 btn-sm' onclick='renderMap()') Draw On Map

      div.result
      div#map
      div#plot(width="800" height="800")
      div#hoverinfo(margin-left="80px")

